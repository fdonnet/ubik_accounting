{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "RedisCache": {
    "ConnectionString": "localhost:6380"
  },
  "AuthServer": {
    "MetadataAddress": "http://localhost:8082/realms/Ubik/.well-known/openid-configuration",
    "Authority": "http://localhost:8082/realms/Ubik",
    "Audience": "account",
    "RequireHttpsMetadata": false,
    "AuthorizationUrl": "http://localhost:8082/realms/Ubik/protocol/openid-connect/auth",
    "TokenUrl": "http://localhost:8082/realms/Ubik/protocol/openid-connect/token",
    "ClientId": "ubik_app",
    "ClientSecret": "Ye6Y36ocA4SaGqYzd0HgmqMhVaM2jlkE"
  },
  "ApiSecurityForAdmin": {
    "HostAndPort": "https://localhost:7051/"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Swagger": {
      "IsCommonDocument": false,
      "CommonDocumentName": "user_admin"
    },
    "Routes": {
      "route_security_admin_users_get_byemail": {
        "ClusterId": "ubik_users_admin",
        "AuthorizationPolicy": "IsMegaAdmin",
        "Match": {
          "Path": "/usrmgt/admin/api/{apiversion}/users",
          "Methods": [ "GET" ],
          "QueryParameters": [
            {
              "Name": "email",
              "Mode": "Exists"
            }
          ]
        },
        "Transforms": [ { "PathPattern": "/admin/api/{apiversion}/users" } ]
      },
      "route_security_admin": {
        "ClusterId": "ubik_users_admin",
        "AuthorizationPolicy": "IsMegaAdmin",
        "Match": {
          "Path": "/usrmgt/admin/api/{apiversion}/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "/admin/api/{apiversion}/{**catch-all}" } ]
      },
      "route_security_me": {
        "ClusterId": "ubik_users_admin",
        "AuthorizationPolicy": "IsUser",
        "Match": {
          "Path": "/usrmgt/api/{apiversion}/me/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "/api/{apiversion}/me/{**catch-all}" } ]
      },
      "route_security_user_get": {
        "ClusterId": "ubik_users_admin",
        "AuthorizationPolicy": "CanUsersRead",
        "Match": {
          "Path": "/usrmgt/api/{apiversion}/users/{id}",
          "Methods": [ "GET" ]
        },
        "Transforms": [ { "PathPattern": "/api/{apiversion}/users/{id}" } ]
      }
    },
    "Clusters": {
      "ubik_users_admin": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7051/",
            "Swaggers": [ // <-- this block
              {
                "PrefixPath": "/usrmgt",
                "Paths": [
                  "swagger/v1/swagger.json"
                ]
              }
            ]
          }
        }
      }
    }
  }
}
