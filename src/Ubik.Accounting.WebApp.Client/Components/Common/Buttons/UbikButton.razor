@inject IJSRuntime JS
@if (IsDisabled)
{
    <button id="@_buttonId" disabled type="@Type" @onclick="ClickAsync" class="@(AdditionalCssClass == string.Empty ? string.Empty : AdditionalCssClass + " ")text-white cursor-wait relative inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        <div class="visible flex" id="@_contentButtonId">
            @ChildContent
            @Label
        </div>
    </button>
}
else
{
    <button id="@_buttonId" type="@Type" @onclick="ClickAsync" class="@(AdditionalCssClass == string.Empty ? string.Empty : AdditionalCssClass + " ")text-white relative inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        <div class="visible flex" id="@_contentButtonId">
            @ChildContent
            @Label
        </div>
        <div class="hidden absolute text-center m-auto left-0 right-0" id="@_spinnerButtonId">
            <svg aria-hidden="true" class="inline w-7 h-7 text-gray-200 animate-spin dark:text-gray-200 fill-blue-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
