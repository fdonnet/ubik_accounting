        </div>
    </button>
}


@code {
    [Parameter]
    public string Label { get; set; } = "button";
    [Parameter]
    public string Type { get; set; } = "button";
    [Parameter]
    public string AdditionalCssClass { get; set; } = string.Empty;
    [Parameter]
    public RenderFragment? ChildContent { get; set; } = null;
    [Parameter]
    public EventCallback OnClick { get; set; }
    [Parameter]
    public bool IsDisabled { get; set; } = false;


    private IJSObjectReference? _jsModule = default!;
    private string _contentButtonId = $"content-button-{Guid.NewGuid()}";
    private string _buttonId = $"button-{Guid.NewGuid()}";
    private string _spinnerButtonId = $"spinner-button-{Guid.NewGuid()}";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _jsModule = await JS.InvokeAsync<IJSObjectReference>(
                "import", "./Components/Common/Buttons/UbikButton.razor.js");
        }
    }

    public async Task LoadingStateAsync()
    {
        await _jsModule!.InvokeVoidAsync("loadingModeUp", new[] { _contentButtonId, _spinnerButtonId, _buttonId });
    }

    public async Task LoadingStateFinishedAsync()
    {
        await _jsModule!.InvokeVoidAsync("loadingModeDown", new[] { _contentButtonId, _spinnerButtonId, _buttonId });
    }

    private async Task ClickAsync()
    {
        await OnClick.InvokeAsync();
    }
}
