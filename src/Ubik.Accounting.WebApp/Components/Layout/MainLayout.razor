@using Ubik.Accounting.WebApp.Components.Layout
@using Ubik.Accounting.WebApp.Client.Components.Common.Alerts

@inherits LayoutComponentBase

<div class="flex h-screen flex-col">
    <Header />
    <main class="flex-1 flex overflow-hidden">
        <aside class="w-52 lg:w-64 bg-zinc-300 dark:bg-gradient-to-br dark:from-gray-800 dark:to-gray-900 text-gray-900 dark:text-white p-4 hidden sm:block">
            <NavMenu />
        </aside>
        <article class="flex-1 bg-gray-100 dark:bg-gradient-to-br dark:from-gray-900 dark:to-gray-950 text-gray-700 dark:text-gray-400 overflow-x-hidden overflow-y-auto p-4">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <ErrUnhandled MainErrorMsg="General application error"></ErrUnhandled>
                </ErrorContent>
            </ErrorBoundary>
        </article>
    </main>
</div>
